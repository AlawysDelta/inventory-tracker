<%= form_with model: @item do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @item.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @item.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :manufacturer %><br>
    <%= form.text_field :manufacturer %>
    <% @item.errors.full_messages_for(:manufacturer).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :qty %><br>
    <%= form.number_field :qty %>
    <% @item.errors.full_messages_for(:qty).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    <% @item.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>
  <br>
  <br>
  <div>
    <%= form.button %>
  </div>
<% end %>
